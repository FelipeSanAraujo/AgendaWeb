@* Definindo a classe de modelo de dados da página *@
@model AgendaWeb.Presentation.Models.TarefaEdicaoModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div>
    <h5>Edição de Tarefas</h5>
    <p>Utilize o formulário para atualizar os dados da tarefa.</p>
    <hr/>
</div>

@* Criando o formulário *@
@using(Html.BeginForm())
{
    <div>
        <!-- campo oculto -->
        @Html.HiddenFor(model => model.IdTarefa)
    </div>

    <div class="row mb-3">
        <div class="col-md-6">

            <label>Nome da tarefa:</label>
            @Html.TextBoxFor(model => model.Nome, 
                new { @class = "form-control" })

            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>

        </div>
        <div class="col-md-3">

            <label>Data da tarefa:</label>
            @Html.TextBoxFor(model => model.Data, 
                new { @class = "form-control", @type = "date" })

            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </div>

        </div>
        <div class="col-md-3">

            <label>Hora da tarefa:</label>
            @Html.TextBoxFor(model => model.Hora, 
                new { @class = "form-control", @type = "time" })

            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Hora)
            </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-9">

            <label>Descrição da tarefa:</label>
            @Html.TextAreaFor(model => model.Descricao, 
                new { @class = "form-control" })

            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>

        </div>
        <div class="col-md-3">

            <label>Prioridade da tarefa:</label>
            <br/>

            @Html.RadioButtonFor(model => model.Prioridade, "1") <label>ALTA</label>
            <br/>
            @Html.RadioButtonFor(model => model.Prioridade, "2") <label>MÉDIA</label>
            <br/>
            @Html.RadioButtonFor(model => model.Prioridade, "3") <label>BAIXA</label>
            
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">

            <input type="submit" value="Salvar Alterações"
                class="btn btn-primary"/>

        </div>
    </div>
}